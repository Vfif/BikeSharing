<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <property name="LOG_DIR">logs</property>
        <property name="pattern_file">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{1} - %msg%n</property>
    </Properties>

    <ThresholdFilter level="trace"/>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{1} - %msg%n"/>
        </Console>
        <File name="File1" fileName="${LOG_DIR}/text.log" bufferedIO="true">
            <PatternLayout pattern="${pattern_file}"/>
        </File>
    </Appenders>


    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File1"/>
            <AppenderRef ref="Console" level="trace"/>
        </Root>
    </Loggers>
</Configuration>
